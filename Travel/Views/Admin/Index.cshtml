@using Travel.Models.Sınıflar
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayaout.cshtml";
}

<h2>Blog Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>İncele</th>
    </tr>
    @foreach(var x in Model)
    {
    <tr>
        <td>@x.ID</td>
        <td>@x.Baslik</td>
        <td><a href="/Admin/BlogSil/@x.ID"style="width:75px;height:35px;" class="btn btn-danger" onclick="return confirm('Silmek İstediğinizden Emin misiniz ?')">Sil</a></td>
        <td><a href="/Admin/BlogGetir/@x.ID" class="btn btn-success">Güncelle</a></td>
        <td><a href="#" style="width:75px;height:35px; background-color:grey"class="btn btn-default">İncele</a></td>
    </tr>
    }
</table>
<a href="/Admin/YeniBlog/" class="btn btn-primary">Yeni Blog Oluştur</a>

